<h1>My Tasks</h1>
<ul style="list-style: none;">
  <% @tasks.each do |task| %>

    <li>
    <%= form_with model: task do |f| %>
    <%= f.check_box :completed %>
    <%= link_to task.title, task_path(task) %>
    <%= link_to "🗑️",
    task_path(task.id),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
    </li>
   <% end %>
  <% end %>
</ul>
<%= link_to "+Add a new task", new_task_path %>
